@page
@using Auto.Data.Entities.Bookings
@model Auto.Pages.UserBookings.Create

@{
    ViewData["Title"] = "Забронировать занятие";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Model.TeacherId" class="control-label"></label>
                <select asp-for="Model.TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                <span asp-validation-for="Model.TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Date" class="control-label"></label>
                <input asp-for="Model.Date" class="form-control" />
                <span asp-validation-for="Model.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-page-handler="selectTime" type="submit" value="Подобрать время" class="btn btn-primary" />
            </div>
            @foreach(var item in ViewBag.ScheduleItems ?? Enumerable.Empty<ScheduleItem>())
            {
                <button class="btn btn-primary"
                        asp-route-scheduleId="@item.Id">
                    @item.TimeString
                </button>
            }
        </form>
    </div>
</div>
