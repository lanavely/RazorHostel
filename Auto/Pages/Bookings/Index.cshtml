@page
@model Auto.Pages.Bookings.IndexModel

@{
    ViewData["Title"] = "Бронирования";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].isClosed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].ScheduleItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].Teacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].School)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bookings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.isClosed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduleItem.TimeString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BookingId">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.BookingId">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.BookingId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
