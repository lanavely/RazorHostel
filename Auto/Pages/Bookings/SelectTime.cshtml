@page
@model Auto.Pages.UserBookings.SelectTime

@{
    ViewData["Title"] = "Забронировать занятие";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Model.StudentId" class="control-label"></label>
                <select asp-for="Model.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="Model.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.TeacherId" class="control-label"></label>
                <select asp-for="Model.TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                <span asp-validation-for="Model.TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Date" class="control-label"></label>
                <input asp-for="Model.Date" class="form-control"/>
                <span asp-validation-for="Model.Date" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Подобрать время" class="btn btn-primary"/>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}