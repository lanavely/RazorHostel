@page
@model Auto.Pages.Bookings.DetailsModel

@{
    ViewData["Title"] = "Подробности";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Бронирование №@Model.Booking.BookingId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Client.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Teacher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Teacher.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.School)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.School.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Comment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.ScheduleItem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.ScheduleItem.TimeString)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Booking?.BookingId">Редактировать</a> |
    <a asp-page="./Index">Обратно к списку</a>
</div>
