@page
@model IndexModel

@{
    ViewData["Title"] = "Пользователи";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Users[0].FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users[0].Birthdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users[0].UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users[0].Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users[0].PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users[0].RoleString)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>    
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>    
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>    
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleString)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Подробности</a>
                
                @if (Model.IsAdmin)
                {
                    <span>
                        | <a asp-page="./Manage" asp-route-id="@item.Id">Редактировать</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>    
                    </span>
                }
            </td>
        </tr>
}
    </tbody>
</table>
