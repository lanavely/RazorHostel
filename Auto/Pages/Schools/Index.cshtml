@page
@model Auto.Pages.Schools.IndexModel

@{
    ViewData["Title"] = "Автошколы";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.School[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.School) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SchoolId">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.SchoolId">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.SchoolId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
