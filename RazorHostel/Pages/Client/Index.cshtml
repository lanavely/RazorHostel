@page
@model RazorHostel.Pages.Client.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Clients</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientEntity[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientEntity[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientEntity[0].Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientEntity[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientEntity[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ClientEntity) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdClient">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdClient">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdClient">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
