@page
@model RazorHostel.Pages.Booking.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Bookings</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingEntity[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingEntity[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingEntity[0].Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingEntity[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingEntity[0].EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BookingEntity) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdBooking">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdBooking">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdBooking">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
